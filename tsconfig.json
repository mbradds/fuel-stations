{
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": ["ES2021", "DOM"],
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "allowJs": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "ESNext"
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
